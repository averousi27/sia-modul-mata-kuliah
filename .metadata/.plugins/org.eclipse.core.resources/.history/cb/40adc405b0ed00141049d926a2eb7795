package com.AIS.Modul.MataKuliah.Repository;

import java.util.List;

import org.hibernate.Query;
import org.hibernate.SessionFactory;
import org.springframework.beans.factory.annotation.Autowired;

import com.AIS.Modul.MataKuliah.Model.RumpunMK;

public class RumpunMKRepositoryImpl implements RumpunMKRepository{

	@Autowired
	private SessionFactory sessionFactory;
	
	@Override
	public long count(String string) {
		// TODO Auto-generated method stub
		return 0;
	}

	@Override
	public List<RumpunMK> get(String where, String order, int limit, int offset) {
		String dbWhere ="";
		String dbOrder ="";
		if(where != "") dbWhere = " WHERE "+where;
		if(order != "") dbOrder = " ORDER BY "+order;
		 
		Query query = sessionFactory.getCurrentSession().createQuery("select * from RumpunMK where "+dbWhere+dbOrder);
		
		if(limit != -1 && limit>0) {
			query.setFirstResult(offset);
			if(offset < 0) offset = 0;
			query.setMaxResults(limit);
		}
		
		return query.list();
	}

}
